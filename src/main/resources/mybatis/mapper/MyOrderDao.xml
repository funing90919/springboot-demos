<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.osfun.dao.MyOrderDao">
    <select id="findMyOrderById" parameterType="int" resultType="top.osfun.domain.MyOrderDO">
        SELECT
            id,
            num
        FROM
          spring_test
        WHERE
          id = #{id}
    </select>

    <update id="updateMyOrder" parameterType="top.osfun.domain.MyOrderDO">
        UPDATE
          spring_test
        SET
          num = #{num}
        WHERE
          id = #{id}
    </update>
</mapper>